{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noStrictGenericChecks": true,
    "newLine": "LF",
    "lib": [
      "es2016",
      "dom"
    ],
    "outDir": "../.tmp",
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "",
    "rootDir": "./",
    "strict": true,
    "paths": {
      "@rucken/todo-core": [
        "./libs/core/src/index.ts"
      ],
      "@rucken/todo-web": [
        "./libs/web/src/index.ts"
      ]
    }
  },
  "exclude": [
    "**/*/.tmp",
    "**/*/dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
