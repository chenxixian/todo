{
  "compilerOptions": {
    "outDir": "../dist",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "newLine": "LF",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "types": [
      "jasmine"
    ],
    "typeRoots": [
      "../../../node_modules/@types/"
    ]
  },
  "files": [
    "./index.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "../temp/factories",
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}